<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_person"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:contentPaddingLeft="20dp"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:id="@+id/RL_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_view_main_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/profile_placeholder"
            app:civ_border_color="#c7c7c7"
            app:civ_border_width="1dp"/>

        <TextView
            android:id="@+id/text_view_item_short_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@+id/image_view_main_profile"
            android:text="Name" />

        <TextView
            android:id="@+id/text_view_item_short_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@+id/image_view_main_profile"
            android:layout_below="@+id/text_view_item_short_name"
            android:text="Phone" />

    </RelativeLayout>
</android.support.v7.widget.CardView>